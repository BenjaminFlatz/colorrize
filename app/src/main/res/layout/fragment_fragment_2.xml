    <com.goodiebag.protractorview.ProtractorView
        android:id="@+id/protractor_view"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:angle="15"
        app:angleTextSize="10sp"
        app:arcColor="@color/colorAccent"
        app:arcProgressColor="@color/colorAccent1"
        app:arcWidth="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressWidth="4dp"
        app:roundEdges="true"
        app:textColor="@color/colorPrimaryDark"
        app:textProgressColor="@color/colorPrimaryDark"
        app:tickColor="@color/colorAccent"
        app:tickIntervals="15"
        app:tickLength="10dp"
        app:tickOffset="18dp"
        app:tickProgressColor="@color/colorAccent1"
        app:ticksBetweenLabel="three"
        app:touchInside="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_color_tw"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/text_margin"
        android:textColor="@color/textColor"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/protractor_view"
        tools:ignore="MissingConstraints" />

    <SeekBar
        android:id="@+id/sb_tw"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="16dp"
        android:max="255"
        android:progress="255"
        android:progressTint="@color/colorAccent"
        android:thumbTint="@color/colorAccent1"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_color_tw" />


</androidx.constraintlayout.widget.ConstraintLayout>